@using Zealous.Models;
@model  List<Equipment>
@{
    ViewBag.Title = "Book Equipment";
}
@{
    var anchor = ViewBag.EquipId;
}
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Equipment</th>
                <th style="width:30%">Description</th>
                <th style="width:20%" class="text-center"></th>
            </tr>
        </thead>

        @foreach (var item in Model)

        {
            <tr>
                <td style="vertical-align:middle">
                    <a name="@item.Id"></a>
                    <div class="row">
                        <div class="col-sm-10">
                            <h4 class="nomargin"> <a href="#"><img src=@Url.Content("~/image/stage.jpg") /></a></h4>
                            @item.EquipmentName
                        </div>
                    </div>
                </td>
                <td class="text-left" style="vertical-align:middle">@item.EquipmentDetail</td>
                <td class="actions" style="vertical-align:middle">
                    @if (item.IsBooked)
                    {
                        @Html.ActionLink("Remove Booking", "RemoveBooking", new { equipId = item.Id }, new { @class = "btn btn-warning" })
                    }
                    else
                    {
                        @Html.ActionLink("Book Now", "BookOne", new { equipId = item.Id }, new { @class = "btn btn-success" })
                    }
                </td>
            </tr>

        }
    </table>
</div>
<script>
    window.location = ("" + window.location).replace(/#[A-Za-z0-9_]*$/, '') + "#@anchor"
</script>
