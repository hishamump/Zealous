@model IEnumerable<Zealous.Models.AspNetUsers>
@{
    ViewBag.Title = "Approve";
}

<h2>Approve</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusName)
            </td>
            <td>
                @Html.ActionLink("Approve", "ApproveOne", new { userId = item.Id, status = item.Status }, new { @class = "btn btn-success" }) 
                @Html.ActionLink("Reject", "RejectOne", new { userId = item.Id, status = item.Status }, new { @class = "btn btn-warning" }) 
            </td>
        </tr>
    }

</table>

