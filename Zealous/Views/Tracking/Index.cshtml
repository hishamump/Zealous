@model List<Zealous.Models.Booking>
@using Zealous.Models
@{
    ViewBag.Title = "Track Events";
}

<h2>Tracking Events List</h2>

<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Event</th>
                <th>Status</th>
                <th style="width:10%"></th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.EventName</td>
            <td>@item.BookingStatus</td>
            <td class="actions" data-th="" style="text-align:right">
                @Html.ActionLink("Update Progress", "UpdateEventProgress", "Tracking", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
            </td>
            <td class="actions" data-th="" style="text-align:right">
                @Html.ActionLink("Track", "ProgressDetail", "Tracking", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
            </td>
        </tr>
        }
        <tr>
            <td colspan="4"><div class="links"><a href="#">&laquo;</a> <a class="active" href="#">1</a> <a href="#">2</a> <a href="#">3</a> <a href="#">4</a> <a href="#">&raquo;</a></div></td>
        </tr>
    </table>

</div>


